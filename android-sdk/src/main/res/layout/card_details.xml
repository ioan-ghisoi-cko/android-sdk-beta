<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/CustomToolbar"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Card Details"
            app:titleTextColor="#fff" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:minWidth="@dimen/layout_min_width">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/helper_label_margin_top"
                        android:paddingLeft="@dimen/card_helper_padding_left"
                        android:paddingRight="@dimen/card_helper_padding_left"
                        android:text="@string/card_accepted_helper_label"
                        android:textColor="@color/card_view_helper_label"
                        android:textSize="@dimen/card_helper_label" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_icon"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/card_icons_view_padding_left"
                    android:paddingRight="@dimen/card_icons_view_padding_left">

                    <LinearLayout
                        android:id="@+id/card_icons_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:contentDescription="@string/card_icon_resource"
                            android:src="@drawable/visa" />

                        <ImageView
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:contentDescription="@string/card_icon_resource"
                            android:src="@drawable/mastercard" />

                        <ImageView
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:contentDescription="@string/card_icon_resource"
                            android:src="@drawable/amex" />

                        <ImageView
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:contentDescription="@string/card_icon_resource"
                            android:src="@drawable/discover" />

                        <ImageView
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:contentDescription="@string/card_icon_resource"
                            android:src="@drawable/diners" />

                        <ImageView
                            android:layout_width="@dimen/card_icon"
                            android:layout_height="@dimen/card_icon"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:contentDescription="@string/card_icon_resource"
                            android:src="@drawable/jcb" />

                    </LinearLayout>
                </HorizontalScrollView>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/card_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fields_padding"
                    android:layout_marginRight="@dimen/fields_padding"
                    android:layout_marginTop="@dimen/field_margin_top"
                    android:hint="@string/card_input_placeholder"
                    android:nextFocusForward="@+id/month_input"
                    app:errorEnabled="true">

                    <com.example.android_sdk.Input.CardInput
                        android:id="@+id/card_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:digits="0123456789 "
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:nextFocusDown="@id/month_input"
                        android:textColor="@color/card_view_details_text"
                        android:textSize="@dimen/card_detail_title_text" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/card_helper_padding_left"
                    android:paddingRight="@dimen/card_helper_padding_left"
                    android:text="@string/expiration_date_helper_label"
                    android:textColor="@color/card_view_helper_label"
                    android:textSize="@dimen/card_helper_label" />

                <LinearLayout
                    android:id="@+id/date_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fields_padding"
                    android:layout_marginRight="@dimen/fields_padding"
                    android:layout_marginTop="@dimen/field_margin_top_small"
                    android:orientation="horizontal">

                    <com.example.android_sdk.Input.MonthInput
                        android:id="@+id/month_input"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:nextFocusDown="@id/year_input"
                        android:nextFocusForward="@+id/year_input"
                        android:popupBackground="@color/spinner_background"
                        android:textSize="16sp" />

                    <com.example.android_sdk.Input.YearInput
                        android:id="@+id/year_input"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:nextFocusDown="@id/card_input"
                        android:popupBackground="@color/spinner_background"
                        android:textSize="16sp" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cvv_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fields_padding"
                    android:layout_marginRight="@dimen/fields_padding"
                    android:layout_marginTop="@dimen/field_margin_top"
                    android:hint="@string/cvv_input_placeholder"
                    app:errorEnabled="true">

                    <com.example.android_sdk.Input.CvvInput
                        android:id="@+id/cvv_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:digits="0123456789 "
                        android:imeOptions="flagNoExtractUi|actionDone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/card_view_details_text"
                        android:textSize="@dimen/card_detail_title_text" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/card_helper_padding_left"
                    android:paddingLeft="@dimen/card_helper_padding_left"
                    android:paddingRight="@dimen/card_helper_padding_left"
                    android:text="@string/billing_helper_label"
                    android:textColor="@color/card_view_helper_label"
                    android:textSize="@dimen/card_helper_label" />

                <com.example.android_sdk.Input.BillingInput
                    android:id="@+id/go_to_billing"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/field_margin_top_small"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:popupBackground="@color/spinner_background"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/pay_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/fields_padding"
                    android:layout_marginRight="@dimen/fields_padding"
                    android:layout_marginTop="25dp"
                    android:height="@dimen/field_height"
                    android:padding="@dimen/pay_button_padding"
                    android:text="@string/pay_button"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:theme="@style/AppTheme.Button" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
